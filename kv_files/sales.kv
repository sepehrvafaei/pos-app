<SalesWindow>:
    name:"sales"
    sales_table:sales_table
    BoxLayout:
        spacing:5
        size_hint:1,.1
        pos_hint:{'top':1}
        Button:
            text:"navigate"
            size_hint:.2,1
            pos_hint:{'left':1}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:20
            italic:True
        Button:
            text:"home"
            size_hint:.2,1
            pos_hint:{'x':.4}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.manager.current="home"
        Button:
            text:"exit"
            size_hint:.2,1
            pos_hint:{'right':1}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:app.get_running_app().stop()
        Label:
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            id:current_user
            text:"sepehr"
            size_hint:.2,1
            pos_hint:{'x':.6}
            font_size:'20sp'
            italic:True
            bold:True
    ScrollView:
        do_scroll_y:True
        do_scroll_x:True
        bar_width:20
        size_hint:1,.5
        pos_hint:{'top':.9}
        BoxLayout:
            orientation:"vertical"
            pos_hint:{'top':1,'left':1}
            size_hint:(None,None)
            width:1000
            height: self.minimum_height
            BoxLayout:
                size_hint:(1,None)
                height:40
                canvas.before:
                    Color:
                        rgba:.3,.5,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                Label:
                    text:'saleID'
                Label:
                    text:"productID"
                Label:
                    text:"staffID"
                Label:
                    text:"costumerID"
                Label:
                    text:"date"                    
            GridLayout:
                id:sales_table
                size_hint:(1,None)
                cols:1
                height: self.minimum_height
    BoxLayout:
        size_hint:1,.1
        pos_hint:{'buttom':1}
        Button:
            text:"sales"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.show_all()
        Button:
            text:"search"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.show_sale()
