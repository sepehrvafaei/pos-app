<CostumerWindow>:
    name:"costumer"
    BoxLayout:
        orinetation:"horizontal"
        size_hint:(1,None)
        height:40
        pos_hint:{'top':1}
        Button:
            text:"home"
            size_hint:.2,1
            pos_hint:{'x':.2}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.manager.current="home"
        Button:
            text:"exit"
            size_hint:.2,1
            pos_hint:{'x':.4}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:app.get_running_app().stop()
        Label:
            canvas.before:
                Color:
                    rgba:.1,.1,.8,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            id:current_user
            text:"sepehr"
            size_hint:.2,1
            pos_hint:{'x':.6}
            font_size:'20sp'
            italic:True
            bold:True
    ScrollView:
        do_scroll_y:True
        bar_width:20
        size_hint:1,.5
        pos_hint:{'top':.9}
        BoxLayout:
            orientation:"vertical"
            pos_hint:{'top':1,'left':1}
            size_hint:(None,None)
            width:1200
            height: self.minimum_height
            BoxLayout:
                size_hint:(1,None)
                height:20
                canvas.before:
                    Color:
                        rgba:.3,.5,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                Label:
                    text:"ID"
                Label:
                    text:"first name"
                Label:
                    text:"last name"
                Label:
                    text:"email"
                Label:
                    text:"phone number"
                Label:
                    text:"city"
            GridLayout:
                id:costumer_table
                size_hint:(1,None)
                height: self.minimum_height
                cols:1
    ScrollView:
        do_scroll_x:True
        bar_width:10
        size_hint:(1,.1)
        pos_hint:{'y':.25}
        GridLayout:
            cols:6
            rows:1
            id:costumer_alone
            size_hint:(None,1)
            width:1200
            spacing:2
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
            Label:
                canvas.before:
                    Color:
                        rgba:.6,.3,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:''
                font_size:'20sp'
    GridLayout:
        row:2
        cols:3
        size_hint:1,.15
        pos_hint:{'y':.1}
        TextInput:
            id:clientID
            hint_text:"costumer id"
        TextInput:
            id:name_f
            hint_text:" first name"
        TextInput:
            id:name_l
            hint_text:"last name"
        TextInput:
            id:email
            hint_text:"email address"
        TextInput:
            id:phone
            hint_text:"phone number"
        TextInput:
            id:city
            hint_text:"city"
    GridLayout:
        id:options
        cols:6
        rows:1
        size_hint:1,.1
        pos_hint:{'buttom':1}
        spacing:2
        Button:
            text:"search"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.show_costumer()
        Button:
            text:"add"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.add_costumer()
                            
        Button:
            text:"remove"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.delete_costumer()
        Button:
            text:"update"
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.update_costumer()
