<InventoryWindow>:
    name:"inventory"
    p_ID:p_ID
    name_:name_
    brand:brand
    qty:qty
    u_value:u_value
    s_ID:s_ID
    NavigationDrawer:
        BoxLayout:
            orientation:"vertical"
            spacing:10
            Button:
                text:"Inventory"
                background_normal:''
                background_color:(.8,.2,.1,1)
                on_release:screen_manager.current="screen1"
            Button:
                text:"Suplliers"
                background_normal:''
                background_color:(.8,.2,.1,1)
                on_release:screen_manager.current="screen2"
            Button:
                text:"Brands"
                background_normal:''
                background_color:(.8,.2,.1,1)
            Button:
                text:"orders"
                background_normal:''
                background_color:(.8,.2,.1,1)
        BoxLayout:
            orientation:"vertical"
            BoxLayout:
                spacing:5
                size_hint:1,.1
                Button:
                    text:"navigate>>>"
                    size_hint:.2,1
                    pos_hint:{'left':1}
                    background_normal:''
                    background_color:(.2,.5,.1,1)
                    font_size:20
                    italic:True
                Button:
                    text:"home"
                    size_hint:.2,1
                    pos_hint:{'x':.4}
                    background_normal:''
                    background_color:(.2,.5,.1,1)
                    font_size:'20sp'
                    italic:True
                    on_release:root.manager.current="home"
                Button:
                    text:"exit"
                    size_hint:.2,1
                    pos_hint:{'right':1}
                    background_normal:''
                    background_color:(.2,.5,.1,1)
                    font_size:'20sp'
                    italic:True
                    on_release:app.get_running_app().stop()
                Label:
                    canvas.before:
                        Color:
                            rgba:0,.1,.9,1
                        Rectangle:
                            pos:self.pos
                            size:self.size
                    id:current_user
                    text:"sepehr"
                    size_hint:.2,1
                    pos_hint:{'x':.6}
                    font_size:'20sp'
                    italic:True
                    bold:True
            ScreenManager:
                id:screen_manager
                Screen:
                    name:"screen1"
                    ScrollView:
                        do_scroll_y:True
                        do_scroll_x:True
                        bar_width:20
                        size_hint:(1,.5)
                        pos_hint:{'top':1}
                        BoxLayout:
                            id:product_scroll
                            orientation:"vertical"
                            pos_hint:{'top':1,'left':1}
                            size_hint:(None,None)
                            width:910
                            height: self.minimum_height
                            BoxLayout:
                                size_hint:(None,None)
                                width:910
                                height:25
                                canvas.before:
                                    Color:
                                        rgba:.3,.5,.1,1
                                    Rectangle:
                                        pos:self.pos
                                        size:self.size
                                Label:
                                    text:"ID"
                                Label:
                                    text:"name"
                                Label:
                                    text:"brand"
                                Label:
                                    text:"unit value"
                                Label:
                                    text:"QTY"
                                Label:
                                    text:"stock value"
                                Label:
                                    text:"supplierID"
                            GridLayout:
                                id:product_table
                                siz_hint:(1,None)
                                cols:1
                                height: self.minimum_height
                    BoxLayout:
                        id:product_alone
                        size_hint:1,.1
                        pos_hint:{'left':1,'y':.2}
                        padding:2
                        spacing:2
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                        Label:
                            canvas.before:
                                Color:
                                    rgba:.6,.3,.1,1
                                Rectangle:
                                    pos:self.pos
                                    size:self.size
                            text:''
                    BoxLayout:
                        size_hint:1,.1
                        pos_hint:{'left':1,'y':.1}
                        TextInput:
                            id:p_ID
                            hint_text:"ProductID"
                            multiline:False
                        TextInput:
                            id:name_
                            hint_text:"Name"
                            multiline:False
                        TextInput:
                            id:brand
                            hint_text:"Brand"
                            multiline:False
                        TextInput:
                            id:qty
                            hint_text:"Quantity"
                            multiline:False
                        TextInput:
                            id:u_value
                            hint_text:"Unit Value"
                            multiline:False
                        TextInput:
                            id:s_ID
                            hint_text:"supplierID"
                            multiline:False
                    GridLayout:
                        id:options
                        cols:6
                        rows:1
                        size_hint:1,.1
                        pos_hint:{'buttom':1}
                        Button:
                            text:"stock"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.show_all_p()
                        Button:
                            text:"search"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.show_product()
                        Button:
                            text:"add"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.add_product()
                            
                        Button:
                            text:"remove"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.delete_product()
                        Button:
                            text:"update"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.update_product()
                                
                Screen:
                    name:"screen2"
                    ScrollView:
                        do_scroll_y:True
                        bar_width:20
                        size_hint:(1,.6)
                        pos_hint:{'top':1}
                        BoxLayout:
                            orientation:"vertical"
                            pos_hint:{'top':1,'left':1}
                            size_hint:(None,None)
                            height: self.minimum_height
                            width:900
                            BoxLayout:
                                size_hint:(None,None)
                                height:20
                                width:900
                                canvas.before:
                                    Color:
                                        rgba:.6,.3,.1,1
                                    Rectangle:
                                        pos:self.pos
                                        size:self.size
                                Label:
                                    text:"ID"
                                Label:
                                    text:"name"
                                Label:
                                    text:"address"
                            GridLayout:
                                id:supplier_table
                                size_hint:(1,None)
                                cols:1
                                height: self.minimum_height
                    GridLayout:
                        cols:3
                        rows:1
                        size_hint:1,.1
                        pos_hint:{'left':1,'y':.1}
                        TextInput:
                            id:sup_ID
                            hint_text:"supplierID"
                            multiline:False
                        TextInput:
                            id:sup_name
                            hint_text:"Name"
                            multiline:False
                        TextInput:
                            id:sup_address
                            hint_text:"address"
                            multiline:True
                    BoxLayout:
                        id:options2
                        size_hint:1,.1
                        pos_hint:{'buttom':1}
                        Button:
                            text:"suppliers"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.show_all_s()
                        Button:
                            text:"add"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.add_supplier()
                                
                        Button:
                            text:"remove"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.remove_supplier()
                        Button:
                            text:"update"
                            background_normal:''
                            background_color:(.2,.5,.1,1)
                            font_size:'20sp'
                            italic:True
                            on_release:root.update_supplier()