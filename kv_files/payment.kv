<PaymentWindow>:
    name:"payment"
    BoxLayout:
        spacing:5
        size_hint:1,.1
        pos_hint:{'top':1}
        Button:
            text:"navigate"
            size_hint:.2,1
            pos_hint:{'left':1}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:20
            italic:True
        Button:
            text:"home"
            size_hint:.2,1
            pos_hint:{'x':.4}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:root.manager.current="home"
        Button:
            text:"exit"
            size_hint:.2,1
            pos_hint:{'right':1}
            background_normal:''
            background_color:(.2,.5,.1,1)
            font_size:'20sp'
            italic:True
            on_release:app.get_running_app().stop()
        Label:
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
            id:current_user
            text:"sepehr"
            size_hint:.2,1
            pos_hint:{'x':.6}
            font_size:'20sp'
            italic:True
            bold:True
    ScrollView:
        do_scroll_y:True
        do_scroll_x:True
        bar_width:20
        size_hint:(1,.5)
        pos_hint:{'top':.9}
        BoxLayout:
            orientation:"vertical"
            size_hint:(1,None)
            height: self.minimum_height
            BoxLayout:
                size_hint:(1,None)
                height:30
                canvas.before:
                    Color:
                        rgba:.3,.5,.1,1
                    Rectangle:
                        pos:self.pos
                        size:self.size
                Label:
                    text:"name"
                Label:
                    text:"brand"
                Label:
                    text:"unit price"
            GridLayout:
                id:pay_table
                cols:1
                size_hint:(1,None)
                height: self.minimum_height
            
    GridLayout:
        size_hint:.4,.4
        pos_hint:{'right':1}
        cols:2
        rows:5
        orientation:"vertical"
        Label:
            text:"customerID"
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        TextInput:
            id:costumer_id
        Label:
            text:"subtotal"
            canvas.before:
                Color:
                    rgba:.5,.1,.1,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        Label:
            id:subtotal
            text:"0"
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        Label:
            text:"discount"
            canvas.before:
                Color:
                    rgba:.2,.5,.1,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        TextInput:
            id:discount
        Label:
            text:"tax"
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        TextInput:
            id:tax
        Label:
            text:"total"
            canvas.before:
                Color:
                    rgba:.5,.1,.1,1
                Rectangle:
                    pos:self.pos
                    size:self.size
        Label:
            text:'0'
            id:total
            canvas.before:
                Color:
                    rgba:0,.1,.9,1
                Rectangle:
                    pos:self.pos
                    size:self.size
    GridLayout:
        cols:2
        size_hint:.6,.4
        pos_hint:{'left':1,'buttom':1}
        Button:
            text:"add"
            on_release:root.add_row()
        BoxLayout:
            orientation:'vertical'
            TextInput:
                id:product_id
                hint_text:"product ID"
            TextInput:
                id:staff_id
                hint_text:"staff ID"
        Button:
            text:"save"
            on_release:root.confirm()
        BoxLayout:
            Button:
                text:"credit card"
            Button:
                text:"debit card"
        Button:
            text:"cancel"
            on_release:root.cancel()
        BoxLayout:
            Button:
                text:"cash"
            Button:
                text:"store credit"
