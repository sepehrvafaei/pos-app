<SignupWindow>:
    name:"signup"
    BoxLayout:
        orientation:"vertical"
        size_hint:(.3,.4)
        spacing :10
        pos_hint:{'center_y':.5,'center_x':.5}
        TextInput:
            id:old_password
            hint_text:"password"
            password:True
        TextInput:
            id:password
            hint_text:"password"
            password:True
        Button:
            text:"change"
            size_hint_x:.5
            pos_hint:{'center_x':.5}
            on_release:root.change_password()
        Button:
            text:"cancel"
            size_hint_x:.5
            pos_hint:{'center_x':.5}
            on_release:root.manager.current="signin"
        Button:
            text:"sign in"
            size_hint_x:.5
            pos_hint:{'center_x':.5}
            on_release:root.manager.current="signin"
