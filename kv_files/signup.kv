<SignupWindow>:
    name:"signup"
    BoxLayout:
        orientation:"vertical"
        size_hint:None,None
        size:200,200
        spacing :10
        pos_hint:{'y':.4,'center_x':.5}
        TextInput:
            id:old_password
            hint_text:"password"
        TextInput:
            id:password
            hint_text:"password"
    BoxLayout:
        size_hint:None,None
        size:120,50
        spacing:10
        pos_hint:{'y':.2,'center_x':.5}
        Button:
            text:"change"
            on_release:self.change_password()
        Button:
            text:"cancel"
            on_release:root.manager.current="signin"
